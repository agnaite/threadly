<div class="container">
  <h4>Enter new post: </h4>
  <%= form_for @post do |f| %>
    <div class="new_post">
      <%= f.text_area :comment, :class => "text-box" %>
    </div>
    <div class="actions">
    <%= f.submit "Create", class: "btn btn-primary rails-btn" %>
    </div>
  <% end %>
  <ul class="posts">
    <% @all_posts.each do |p| %>
      <li><%= auto_link(p.comment) %><br>
        <span class="timestamp"><%= p.created_at%></span>
        <span class="delete">
          <%= link_to 'Destroy', p, method: :delete, data: {confirm: 'Are you sure?' } %>
        </span>
      </li>
    <% end %>
  </ul>
</div>
