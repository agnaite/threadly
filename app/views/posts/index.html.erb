<div class="container container-main">
  <% if logged_in? %>
    <div class="post-wrapper">
      <h4>Enter new post: </h4>
      <%= form_for @post do |f| %>
        <div class="new_post">
          <%= f.text_area :comment, :class => "text-box", :autofocus => true %>
        </div>
        <div class="actions">
          <%= f.submit "Create", class: "btn btn-default btn-block" %>
        </div>
      <% end %>
    </div>
  <% end %>

  <ul class="posts">
    <% @all_posts.each do |p| %>
      <li><%= auto_link(auto_link_usernames(p.comment)) %><br>
        <% if current_user == p.user %>
          <span class="user">posted by <span id="user-post"><%= link_to 'me', p.user %></span>
          <span class="timestamp">on <%= p.created_at%></span></span>
          <span class="delete">
            <%= link_to 'delete', p, method: :delete, data: {confirm: 'Are you sure you want to delete this post?' } %>
          </span>

        <% else %>
          <span class="user">
            posted
            <% unless p.user.nil? %>
              by <%= link_to p.user.username.strip, p.user %>
            <% end %>
            <span class="timestamp">
              on <%= p.created_at%>
            </span>
          </span>
        <% end %>
      </li>

    <% end %>
  </ul>
</div>
